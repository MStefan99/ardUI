html
	scroll-behavior smooth
	font-family sans-serif

	body
		margin 0
		min-height 100vh
		background-color #E2F1F9

		#logo
			filter invert(1)
			margin 1rem 0 0 1rem
			height 3em

		#splash
			min-height 80vh
			overflow visible
			background-image linear-gradient(to bottom right, #9AC1FF 0% 46%, #8AB1FF 46% 47%,
			#dae6ff 47%, transparent 50% 100%)

			@media screen and (min-width 1440px)
				padding 0 20vw

			span
				display block

			#left
				color #fff
				font-size 10em
				margin 1rem 0 0 5rem
				max-width 50vw
				font-weight bold

			#right
				margin 0 2rem 0 0
				text-align right
				font-size 8em
				position relative
				top 25vh
				color #9AC1FF

				#line2
					font-weight bold
