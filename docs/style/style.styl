--accent-color = #9AC1FF
--background-color = #f0f0f0
--header-height = 8vh


glass(color = #fffb)
	background-color transparentify(color, #fff, .8)
	backdrop-filter blur(12px)
	border-bottom darken(color, 5%) 1px solid


html
	font-family sans-serif
	scroll-behavior smooth

	body
		margin 0
		display flex
		flex-flow column
		justify-content space-between
		line-height 1.5
		min-height 100vh

		.hidden
			visibility hidden

		header
			glass(--accent-color)
			display flex
			flex-flow row nowrap
			justify-content flex-start
			align-content center
			padding 1em
			padding-bottom .5em
			position sticky
			z-index 1
			top 0
			height --header-height

			#logo
				height 3em
				filter invert(1)

		main
			#tab-layout
				display flex
				flex-flow row nowrap
				justify-content space-between
				align-content stretch

				@media screen and (max-width 768px)
					flex-wrap wrap

				.tab
					max-height 100vh - --header-height
					padding 1em 3ch 0
					background-color lighten(--accent-color, 90%)

					&#nav-tab
						border-right 1px solid lighten(--accent-color, 50%)

					&#toc-tab
						border-left 1px solid lighten(--accent-color, 50%)

					@media screen and (min-width 768px)
						flex 0 0 15%
						position sticky
						top --header-height

					.tab-title
						width 100%
						text-align center

				#content-tab
					flex-grow 1
					max-width 768px
					padding 0 2em
					margin 1em auto

				.toc-element
					display block
					color #000

			.tip-title
				font-size 1.2em
				margin-bottom .8em

			code
				display block
				background-color lighten(--accent-color, 90%)
				color darken(--accent-color, 50%)
				white-space pre
				border-radius 5px
				padding 1em
				counter-reset code-line

				div
					counter-increment code-line

					&:before
						content counter(code-line)
						display inline-block
						width 3.2ch
						margin-right 1ch
						border-right 1px solid --accent-color

			.auto-reference
				color darken(--accent-color, 20%)
				background-color lighten(--accent-color, 85%)
				padding 1px
				border-radius 1px

				&:hover
					color darken(--accent-color, 60%)

			.anchor
				transform translateY(-20vh)

		footer
			padding 1em 2em
			border-top 1px solid lighten(--accent-color, 50%)
			background-color lighten(--accent-color, 90%)
