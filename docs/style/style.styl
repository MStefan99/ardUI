card()
	padding 1em
	border 1px solid #ccc
	border-radius 1em
	box-shadow 0 0 .5em #0005
	display block


html
	font-family sans-serif
	scroll-behavior smooth

	body
		margin 0
		display flex
		flex-flow column
		justify-content space-between
		min-height 100vh

		header
			display flex
			flex-flow row nowrap
			justify-content flex-start
			padding 1em
			margin-bottom 1em

			#logo
				height 2em

		main
			margin 1em 3em

		footer
			padding 1em 2em
			background-color #f0f0f0